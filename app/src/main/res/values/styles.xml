<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryVariant">#000000</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#2962FF</item>
        <item name="colorSecondaryVariant">#0039CB</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorError">#F44336</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#212121</item>

        <item name="colorControlActivated">#3f49cc</item>
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
    </style>
    <style name="Background" parent="@android:style/Theme">
        <item name="android:windowBackground">@drawable/ic_background_whole</item>
    </style>

    <style name="LabelText">
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">@color/text_alpha</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">@dimen/text_24</item>
        <item name="android:textColor">@color/text_alpha</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="EditText.DefaultAlpha" parent="android:Widget.EditText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/small_125</item>
    </style>

    <style name="Button.RightLink" parent="android:Widget.Button">
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="Button.DefaultAlpha" parent="android:Widget.Button">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textAllCaps">false</item>
    </style>


</resources>
