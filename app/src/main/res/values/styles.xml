<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="Background" parent="@android:style/Theme">
        <item name="android:windowBackground">@drawable/ic_background_whole</item>
    </style>

    <style name="LabelText">
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">#3F9BE5</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="EditText.DefaultAlpha" parent="android:Widget.EditText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/small_125</item>
    </style>

</resources>
