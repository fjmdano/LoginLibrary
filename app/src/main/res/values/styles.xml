<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/holo_purple</item>
        <item name="colorAccent">@android:color/darker_gray</item>

    </style>

    <style name="Background" parent="@android:style/Theme">
        <item name="android:windowBackground">@drawable/ic_background_whole</item>
    </style>

    <style name="LabelText">
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">@color/text_alpha</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">@dimen/text_24</item>
        <item name="android:textColor">@color/text_alpha</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="EditText.DefaultAlpha" parent="android:Widget.EditText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/small_125</item>
    </style>



    <style name="Button.DefaultAlpha" parent="android:Widget.Button">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
