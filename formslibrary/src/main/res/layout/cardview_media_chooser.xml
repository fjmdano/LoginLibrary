<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    app:cardPreventCornerOverlap="false"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="@dimen/normal_100"
    android:layout_marginStart="@dimen/normal_100"
    android:layout_marginRight="@dimen/normal_100"
    android:layout_marginEnd="@dimen/normal_100"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_from_gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/normal_100"
            android:paddingBottom="@dimen/normal_100"
            android:paddingLeft="@dimen/small_125"
            android:text="Choose Existing Picture from Gallery"/>
        <TextView
            android:id="@+id/tv_from_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/normal_100"
            android:paddingBottom="@dimen/normal_100"
            android:paddingLeft="@dimen/small_125"
            android:text="Capture New Photo"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>