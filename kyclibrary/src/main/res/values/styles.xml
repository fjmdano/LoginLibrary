<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@android:color/holo_purple</item>
        <item name="colorAccent">@android:color/darker_gray</item>

        <item name="colorControlActivated">#3f49cc</item>
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
    </style>

    <style name="textTitleToolbar">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="EditText.Default" parent="android:Widget.EditText">
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:background">@drawable/edittext_default</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="DefaultRecycleViewText">
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:padding">@dimen/normal_100</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>